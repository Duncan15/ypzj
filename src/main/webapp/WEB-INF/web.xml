<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>一偏之荐</display-name>
  <filter>
    <filter-name>PageStateFilter</filter-name>
    <filter-class>com.cwc.web.ypzj.filter.PageStateFilter</filter-class>
  </filter>
  <filter>
    <filter-name>PageDataFilter</filter-name>
    <filter-class>com.cwc.web.ypzj.filter.PageDataFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PageStateFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>PageDataFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>IndexJSP</servlet-name>
    <jsp-file>/jsp/index.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>ErrorJSP</servlet-name>
    <jsp-file>/jsp/error.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>KindJSP</servlet-name>
    <jsp-file>/jsp/kind.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>EditJSP</servlet-name>
    <jsp-file>/jsp/edit.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>PersonalJSP</servlet-name>
    <jsp-file>/jsp/personal.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.cwc.web.ypzj.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.cwc.web.ypzj.servlets.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ArticleServlet</servlet-name>
    <servlet-class>com.cwc.web.ypzj.servlets.ArticleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogOutServlet</servlet-name>
    <servlet-class>com.cwc.web.ypzj.servlets.LogOutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ImgServlet</servlet-name>
  	<servlet-class>com.cwc.web.ypzj.servlets.ImgServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LinkServlet</servlet-name>
  	<servlet-class>com.cwc.web.ypzj.servlets.LinkServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexJSP</servlet-name>
    <url-pattern>/index</url-pattern>
    <url-pattern>/index.html</url-pattern>
    <url-pattern>/index.jsp</url-pattern>
    <url-pattern>/index.htm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogOutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ArticleServlet</servlet-name>
    <url-pattern>/article/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ImgServlet</servlet-name>
  	<url-pattern>/user/edit/img</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LinkServlet</servlet-name>
  	<url-pattern>/user/edit/link</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>KindJSP</servlet-name>
    <url-pattern>/kind</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditJSP</servlet-name>
    <url-pattern>/user/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PersonalJSP</servlet-name>
    <url-pattern>/user/personal</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ErrorJSP</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>
</web-app>