<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>一偏之荐</display-name>
  <context-param>
    <param-name>externalConfigLocation</param-name>
    <param-value>/home/ubuntu/site/config/ypzj/application.properties</param-value>
  </context-param>
  <context-param>
    <param-name>domain</param-name>
    <param-value>http://localhost:8080/</param-value>
  </context-param>
  <context-param>
    <param-name>appConfigLocation</param-name>
    <param-value>/WEB-INF/config/application.properties</param-value>
  </context-param>
  <context-param>
    <param-name>adminConfigLocation</param-name>
    <param-value>/WEB-INF/config/admin.properties</param-value>
  </context-param>
  <context-param>
    <param-name>mailConfigLocation</param-name>
    <param-value>/WEB-INF/config/mail.properties</param-value>
  </context-param>
  <context-param>
    <param-name>mailContentPath</param-name>
    <param-value>/WEB-INF/tmpl/mail.html</param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>/WEB-INF/config/log4j.xml</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.CONFIG_FILES</param-name>
    <param-value>/WEB-INF/config/log4j.xml</param-value>
  </context-param>


  <servlet>
    <servlet-name>IndexJSP</servlet-name>
    <jsp-file>/jsp/index.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>KindJSP</servlet-name>
    <jsp-file>/jsp/kind.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>EditJSP</servlet-name>
    <jsp-file>/jsp/edit.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>PersonalJSP</servlet-name>
    <jsp-file>/jsp/personal.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>TotalJSP</servlet-name>
    <jsp-file>/jsp/total.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>AdminJSP</servlet-name>
    <jsp-file>/jsp/admin.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>ManageJSP</servlet-name>
    <jsp-file>/jsp/manage.jsp</jsp-file>
  </servlet>


  <servlet-mapping>
    <servlet-name>IndexJSP</servlet-name>
    <url-pattern>/index</url-pattern>
    <url-pattern>/index.html</url-pattern>
    <url-pattern>/index.jsp</url-pattern>
    <url-pattern>/index.htm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>KindJSP</servlet-name>
    <url-pattern>/kind</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditJSP</servlet-name>
    <url-pattern>/user/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PersonalJSP</servlet-name>
    <url-pattern>/personal</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TotalJSP</servlet-name>
    <url-pattern>/total</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminJSP</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ManageJSP</servlet-name>
    <url-pattern>/user/manage</url-pattern>
  </servlet-mapping>


  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/WEB-INF/jsp/error.jsp</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>
</web-app>